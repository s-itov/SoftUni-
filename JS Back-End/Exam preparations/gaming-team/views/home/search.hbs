<main id="search">
    <section class="game-search">
        <h1>Search</h1>

        <form class="search-form"  method="GET">
            <input type="text" class="search-game" name="name" placeholder="Search here...">
            <select id="platform" name="platform">
                <option value="">-------</option>
                <option value="PC">PC</option>
                <option value="Nintendo">Nintendo</option>
                <option value="PS4">PS4</option>
                <option value="PS5">PS5</option>
                <option value="XBOX">XBOX</option>
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>
        {{#if games}}

        <div class="search-result">
            <div class="search-list">
                {{#each games}}
                <div class="game">
                    <div class="game-img">
                        <img src="{{this.imageUrl}}">
                    </div>
                    <div class="game-info">
                        <h1>{{this.name}}</h1>
                        <p><span>Platform: </span>{{this.platform}}</p>
                        <p><span>Ganre: </span>{{this.genre}}</p>
                        <p><span>Price: </span>${{this.price}}</p>
                    </div>

                    <a href="/games/{{this._id}}/details" class="btn-details">Details</a>
                </div>
                {{/each}}
            </div>
        </div>
        {{else}}
        <div class="no-match">
            <p>No match was found!</p>
        </div> 
        {{/if}}
    </section>
</main>